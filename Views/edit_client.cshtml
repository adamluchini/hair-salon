<h2>Edit @Model.GetName()</h2>
    <form action="/client/@Model.GetId()/edit" method="post">
    <input type="hidden" name="_method" value="PATCH">
    <input name="client-id" type="hidden" value="@Model.GetId()">
    <label for="client-name">Update @Model.GetName() 's name</label>
    <input id="client-name" name="client-name" type="text">
    <button type="submit">Submit</button>
  </form>
  <p><a href = "/">Return home</a></p>
